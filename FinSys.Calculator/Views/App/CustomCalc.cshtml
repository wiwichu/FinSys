@{
    ViewBag.Title = "Custom Calculator";
}
@section Scripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app-calculator.js"></script>
    <script src="~/js/calculatorController.js"></script>
}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2>Custom Calculator</h2>
    </div>
</div>
<div class="row" ng-app="app-calculator" ng-controller="calculatorController as vm" >
    <div class="text-danger text-center" ng-show="vm.errorMessage">{{ vm.errorMessage}}</div>
    <div class="text-center" ng-show="vm.isBusy"><i class="fa fa-spinner fa-spin"></i> Loading... </div>
    <div class="col-md-2">
        <form>
            <div class="form-group">
                <label for="instrumentClassSelect">Instrument Class</label>
                <select class="form-control" name="instrumentClassSelect" id="instrumentClassSelect"
                        ng-options="iClass for iClass in vm.instrumentClass"
                        ng-model="vm.selectedInstrumentClass"                         
                        ng-change="vm.instrumentClassChanged()">
                    <option value="" ng-if=!vm.selectedInstrumentClass>Select...</option>
                </select>
                <!--
                <select  class="form-control"  name="instrumentClassSelect" id="instrumentClassSelect">
                   <option ng-repeat="iClass in vm.instrumentClass" value="{{iClass}}" 
                         >{{iClass}}</option> 
                </select>
                    -->
            </div>
            <div class="form-group">
                <label>Day Count</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Pay Frequency</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Calculation Date Adjust</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Payment Date Adjust</label>
                <input class="form-control" />
            </div>
        </form>
    </div>
    <div class="col-md-2">
        <form>
            <div class="form-group">
                <label>Maturity Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Value Date</label>
                <input class="form-control" />
            </div>
            <div>
                <input type="submit" value="Calculate" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
